<view class="back" bindtap="backHome">《</view>
<view class="SideNavigationBar">
<view class="single_page" bindtap="ChangeShowStatus"><text class="font_class">;好友列表
</text></view>
<view class="single_page" bindtap="ChangeShowStatus_2">
<text class="font_class">我的排名
</text></view>
<view class="single_page" bindtap="ChangeShowStatus_3">
<text class="font_class">\t发\t 现
</text></view>
</view>

 
 <view class="hide{{change_1?'':'show'}}" bindtap="ChangeShowStatus">
<view><block wx:for="{{navList}}" wx:for-index="idx" wx:if="{{idx!='_id'}}" wx:key="key">
<view class="Friend"><view class="line"></view>
<image class="portrait" src="{{item.friendList[0].avatarUrl}}"></image>
<text class="fontstyle">:{{item.friendList[0].un}}</text>
</view>
</block></view>
</view>

<view class="hide{{change_2?'':'show'}}">
<view class="Halfcircle_1"></view>
<view><block wx:for="{{sortfriend}}" wx:for-index="friendidx" wx:key="key">
<view class="Friend"><view class="line"></view>
<image class="portrait" src="{{item.avatarUrl}}"></image>
<text class="fontstyle">:{{item.un}}</text>
<text class="coinstyle">金币数量：{{item.coin}}</text>
</view>
</block></view>

</view>


 <view class="hide{{change_3?'':'show'}}" bindtap="ChangeShowStatus_3">
<view><block wx:for="{{userList}}" wx:for-index="userIdx" wx:key="key">
<view class="Friend"><view class="line"></view>
<image class="portrait" src="{{item.avatarUrl}}"></image>
<text class="fontstyle">:{{item.un}}</text>
</view>
</block></view>
</view>

<view class="hide{{change_1?'':'show'}}">
<view class="Halfcircle"></view>
</view>

<view class="hide{{change_3?'':'show'}}">
<view class="Halfcircle_2"></view>
</view>









