/* pages/index/index.wxss */
page{
  width: 100%;
  height: 100%;
  background: rgb(98, 175, 149);
  overflow-y: scroll;
  color:white;
}
/* 左侧选则框 */
.left{
  position: fixed;
  z-index:7;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(61, 61, 61, 0.74);
}
@keyframes letf_options_in{
  /* 左侧选择框出现动画 */
  0%{
    position: relative;
    left: -60%;
  }
  100%{
    position: relative;
    left: 0;
  }
}
.left_container{
  height: 100%;
  width: 60%;
  background: rgb(57, 163, 103);
  color:white;
  animation: letf_options_in 0.5s;
}
.left_top{
  height: 220rpx;
  width: 100%;
  background: rgb(36, 109, 67);
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  font-size: 40rpx;
  font-weight: bold;
}
.user_icon{
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  border:5rpx solid white;
}
.user_nu{
  font-size: 40rpx;
  max-width: 50%;
  word-break: break-all;/*允许在单词内换行*/
  text-align: left;
  line-height: 45rpx;
  text-overflow: -o-ellipsis-lastline;/*css3中webkit内核提供的一个方法类似ellipsis*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;/*自适应盒子*/
  -webkit-line-clamp: 1;/*此处为1行,如果是两行就改成2*/
  -webkit-box-orient: vertical;
}
.left_option{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.left_option:active{
  background: rgb(36, 109, 67);
}

/* 左上角按钮 */
.options{
  position: absolute;
  top: 80rpx;
  left: 40rpx;
  width: 100rpx;
  height: 70rpx;
}
.line{
  width: 60rpx;
  height: 10rpx;
  background: white;
  margin-top:5rpx;
}

.top{
  width: 100%;
  height: 10%;
  min-height: 150rpx;
}
.main{
  width: 100%;
  height: 72%;
  min-height: 920rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.containerOfProgress{
  display: flex;
  justify-content: center;
  width: 100%;
}
progress{
  width: 55%;
  margin-top:10rpx;
  margin-bottom: 50rpx;
  border-radius: 20rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgb(196, 196, 196);
}
.progress_icon{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  margin-top:-20rpx;
  margin-left: -225rpx;
}
.tree{
  width: 430rpx;
  height: 430rpx;
  border-radius: 100%;
  border:30rpx solid rgb(212, 212, 79);
  background: rgb(252, 238, 158);
}
.companydiV{
    position: absolute;
    top: -130px;
    /* left: 80px; */
    transform: skewY(0) rotateZ(88deg) rotateX(8deg) rotateY(-79deg);
  }
.target_title{
  width: 70%;
  min-height: 150rpx;
  height: 18%;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-top:30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.button{
  position: relative;
  margin-top:30rpx;
  background: rgb(212, 212, 79);
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgb(173, 173, 56);
  width: 280rpx;
  height: 100rpx;
  display: flex;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
  color:white;
  border-radius: 10rpx;  
}
.button:active{
  top:5rpx;
  box-shadow: none;
}

.bottom{
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 210rpx;
  height: 18%;
}