<view class="top">
 <view class="top_title"> 设置</view>
 <view class="back" bindtap="backHome">《</view>
</view>

<view class="title_1">设置</view>
<view class="line"></view>


<view class="bell">
  <text class="bell_font">自动上传错误报告</text>
  <switch class="switch_bell"></switch>
  <view class="switch_line"></view>
</view>

 <view class="bell">
  <text class="bell_font">变更语言</text>
  <text class="switch_bell">简体中文</text>
  <view class="switch_line"></view>
</view> 

<view class="bell" bindtap="chooseTheme">
  <text class="bell_font">选择主题</text>
  <view class="switch_line"></view>
</view>

<view class="about">
   <text class="about_font">关于</text>
   <view class="about_line"></view>
</view>

<view class="all">
  <view class="singleConfig">使用教学</view>
  <view class="configLine"></view>
</view>

<view class="all">
  <text class="singleConfig">常见问题</text>
  <view class="configLine"></view>
</view>
<view class="all">
  <text class="singleConfig">联系我们</text>
  <view class="configLine"></view>
</view>
<view class="all">
  <text class="singleConfig">隐私权政策</text>
  <view class="configLine"></view>
</view>
<view class="all">
  <view class="singleConfig" bindtap="getidea" >意见反馈</view>
  <view class="configLine"></view>
</view>

<view class="modal-box" hidden="{{hidden}}">
     <view class="modal-content">
     <view class="return" bindtap="return">返回</view>
     <view class="submit" bindtap="submit">提交</view>
     <view class="idea">请输入你的意见</view>
    <view class="border"></view>
      <view class="page-section">
        <view class="textarea-wrp">
         <view class="border_area">
         <textarea auto-focus="true" placeholder="输入意见" bindinput="getInputTarget" style="height: 3em"  maxlength="100" placeholder-style="top:30rpx" auto-height value="{{input}}"/>
       </view>
       </view>
      </view>
    </view>
  </view>


  <view class="modal-box" hidden="{{changeTheme}}">
     <view class="modal-content">
     <view class="return" bindtap="chooseTheme">返回</view>
     <view class="submit" bindtap="toChooseTheme">确认</view>
     <view class="idea">请选择主题</view>
    <view class="border"></view>
      <view class="page-section">
          <view class="{{changeView!='white'?'white':'white_1'}}" bindtap="changeview" data-theme="white">白色</view>
          <view class="{{changeView!='green'?'green':'green_1'}}" bindtap="changeview" data-theme="green">绿色</view>
      </view>
    </view>
  </view>




  

