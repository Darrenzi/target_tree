/* pages/studyRoom/studyRoom.wxss */
page{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 35rpx;
  position: relative;
}
.top{
  width: 100%;
  height: 15%;
  position: fixed;
  background: rgb(57, 163, 103);
  top:0;
  color:white;
  font-size:45rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.back{
  position: absolute;
  top:60rpx;
  left: 50rpx;
  font-size: 40rpx;
}
.main{
  position: relative;
  top:10%;
  width: 90%;
  height: 85%;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow:scroll;
}
.tip{
  position: relative;
  left:-200rpx;
  color:rgb(177, 177, 177);
  font-size: 25rpx;
}
.item{
  width: 90%;
  box-shadow: 0rpx 0rpx 5rpx 5rpx gainsboro;
  margin-top:20rpx;
  margin-bottom:20rpx;
  padding:20rpx;
  color:rgb(90, 90, 90);
  font-size: 30rpx;
}
.itemName{
  color:rgb(57, 163, 103);
  font-weight: bold;
}