/* pages/targetDetail/targetDetail.wxss */
page{
  width: 100%;
  min-height: 100%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  color:rgb(82, 82, 82);
  overflow-x: hidden;
}
.top{
  width: 100%;
  padding-top:80rpx;
  color:white;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top:0;
  background: white;
  z-index: 1;
}
.top_title{
  width: 40%;
  padding:20rpx;
  text-align: center;
  background: rgb(57, 163, 103);
  font-size: 40rpx;
  border-radius: 20rpx;
}
.back{
  position: absolute;
  left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  font-weight: bolder;
  font-size: 40rpx;
  color:rgb(57, 163, 103);
}

.main{
  margin-top:210rpx;
  width: 90%;
  overflow-y: scroll;
  overflow-x:hidden;
}
.mainTop{
  display: flex;
  align-items: center;
  margin-bottom:30rpx;
  width: 90%;
  position: relative;
}
.avatar{
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.targetTop{
  font-weight: bold;
  color:rgb(71, 71, 71);
  width: 65%;
  font-size: 40rpx;
}
.progress_container{
  font-size: 30rpx;
  font-weight: bold;
  color:gray;
  display: flex;
  align-items: center;
  position: relative;
}
.progress_container progress{
  width: 70%;
  margin-top:8rpx;
  margin-left: 10rpx;
}
.percent{
  position: absolute;
  left: 48%;
  margin-top:5rpx;
  font-size: 28rpx;
  color:rgb(63, 63, 63);
}
.watchButton{
  width: 120rpx;
  height: 50rpx;
  color:white;
  background: rgb(57, 163, 103);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgb(24, 119, 65);
  position: absolute;
  right: -55rpx;
}
.watchButton:active{
  margin-top:5rpx;
  margin-left: 5rpx;
  box-shadow: none;
}
.watched{
  /* 已围观额度样式 */
  box-shadow: none;
}
.targetTitle{
  color:rgb(71, 71, 71);
  font-weight: bold;
  font-size: 35rpx;
  margin-bottom: 20rpx;
  width: 90%;
}
.targetContent{
  overflow-y: scroll;
  max-height: 450rpx;
  height: 450rpx;
}
.spiltLine{
  width:100%;
  height: 5rpx;
  background: gainsboro;
  margin-top:40rpx;
}

.commentInput{
  width: 100%;
  border-bottom: 2rpx solid gainsboro;
  font-size:35rpx;
  background: rgb(240, 240, 240);
  height: 80rpx;
}
.messages{
  display: flex;
  width: 100%;
  position: relative;
  margin-top:30rpx;
}
.messageAvatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.messageRight{
  width: 80%;
  border-bottom: 2rpx solid gainsboro;
  margin-left: 20rpx;
}
.messageUn{
  font-size: 35rpx;
  margin-bottom: 10rpx;
  width:75%;
  color:rgb(71, 71, 71);
  display: flex;
  align-items: center;
}
.messageUnTip{
  background: rgb(57, 163, 103);
  color:white;
  margin-left: 10rpx;
  font-size: 25rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  text-align: center;
  border-radius: 25rpx;
  min-width: 60rpx;
}
.messageContent{
  max-height: 300rpx;
  overflow-y:scroll;
}
.messageDate{
  top:0;
  right: 10rpx;
  position: absolute;
}
.reply{
  display: flex;
  width: 100%;
  position: relative;
  margin-top:30rpx;
}
.replyAvatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
}
.replyRight{
  width: 80%;
  margin-left: 20rpx;
}
.replyUn{
  font-size: 30rpx;
  margin-bottom: 10rpx;
  width:75%;
  color:rgb(71, 71, 71);
  display: flex;
  align-items: center;
}
.replyUnTip{
  background: rgb(57, 163, 103);
  color:white;
  margin-left: 10rpx;
  font-size: 20rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  text-align: center;
  border-radius: 25rpx;
  min-width: 60rpx;
}
.replyContent{
  max-height: 300rpx;
  overflow-y:scroll;
}
.replyDate{
  top:0;
  right: 10rpx;
  position: absolute;
}


.noComment{
  width: 100%;
  margin-top:100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.noCommentIcon{
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 15rpx;
}

.bottom{
  position: fixed;
  bottom:0;
  width: 100%;
  height: 120rpx;
  border:2rpx solid gainsboro;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  background: white;
}
.comment{
  background: rgb(231, 231, 231);
  width: 40%;
  height: 70%;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bottomOption{
  width: 60rpx;
  height: 60rpx;
}