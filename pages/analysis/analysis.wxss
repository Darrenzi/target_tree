page {
    height: 100%;
    width: 100%;
  }
  
  .main {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    color:gray;
    overflow-y:scroll;
  }
ec-canvas {
  width: 100%;
  height: 600rpx;
}
.back{
  position: absolute;
  left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  font-weight: bolder;
  color: rgb(57, 163, 103);
}
.top{
  margin-top:80rpx;
  margin-bottom: 40rpx;
  min-height: 80rpx;
  width: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 40rpx;
  color: white;
  background: rgb(57, 163, 103);
}
.msg-container{
  width: 70%;
  margin-bottom: 50rpx;
}
.title{
  color:rgb(57, 163, 103);
  font-weight: bold;
  font-size: 45rpx;
  margin-bottom: 20px;
}
.evaluation{
  color:rgb(57, 163, 103);
  font-weight: bold;
  font-size: 30rpx;
}
.suggestion{
  font-size: 25rpx;
  margin-bottom: 30rpx;
}
