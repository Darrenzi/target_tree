/* pages/messages/messages.wxss */
page{
  width: 100%;
  min-height: 100%;
  font-size: 35rpx;
}
.top{
  width: 100%;
  padding-top:80rpx;
  color:white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_title{
  width: 40%;
  padding:20rpx;
  text-align: center;
  background: rgb(57, 163, 103);
  font-size: 40rpx;
  border-radius: 20rpx;
}
.back{
  position: absolute;
  left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  font-weight: bolder;
  font-size: 40rpx;
  color:rgb(57, 163, 103);
}

.option_container{
  margin-top:50rpx;
  height: 180rpx;
  display: flex;
  justify-content: space-evenly;
  border-bottom:20rpx solid rgba(127, 212, 164, 0.884);
}
.option{
  position: relative;
  text-align: center;
}
.option_choose{
  background: rgb(57, 163, 103);
  color:white;
  height: 50rpx;
  width: 100rpx;
  border-radius: 20rpx;
}
.newMsgNum{
  /* 新消息提示框 */
  display: flex;
  justify-content: center;
  align-items:center;
  position: absolute;
  right: -10rpx;
  top:-10rpx;
  height: 40rpx;
  width: 40rpx;
  font-size: 30rpx;
  border-radius: 100%;
  color:white;
  background: rgb(57, 163, 103);
}
.option_icon{
  height: 80rpx;
  width: 80rpx;
}

.main{
  width: 100%;
  overflow-y: scroll;
}
.noMessage{
  width: 100%;
  margin-top:300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.noMessageIcon{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 15rpx;
}
.message{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  width: 100%;
  height: 180rpx;
  border-bottom:5rpx solid gainsboro;
  position: relative;
  overflow: hidden;
}
.avatar{
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  background: gainsboro;
}
.overview{
  width: 75%;
  height: 60%;
}
.username{
  width: 55%;
  margin-bottom:15rpx;
  font-weight: bold;
}
.date{
  position: absolute;
  right: 60rpx;
  color:rgb(117, 117, 117);
  font-size: 30rpx;
}
.content{
  font-size: 32rpx;
  color:rgb(117, 117, 117);
}
.messageOperation{
  position: absolute;
  color:white;
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgb(185, 63, 63);
  right: -25%;
  transition: all 0.5s;
  /* animation: operation_in 0.5s; */
}
.msgOperationChoose{
  right: 0;
}