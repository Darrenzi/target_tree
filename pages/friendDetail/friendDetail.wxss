/* pages/friendDetail/friendDetail.wxss */
page{
  width: 100%;
  height: 100%;
  color:rgb(57, 163, 103);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow-y:scroll;
}
.back{
  position: absolute;
  top:80rpx;
  left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  font-weight: bolder;
  font-size: 40rpx;
}
.top{
  display: flex;
  align-items: center;
  min-height: 260rpx;
  width: 100%;
  margin-top:100rpx;
}
.avatar{
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  margin-left: 50rpx;
  margin-right: 20rpx;
}
.userName{
  font-size: 40rpx;
  font-weight: bold;
  width: 50%;
}
.addFriend{
  background: rgb(199, 87, 59);
  color: white;
  padding:15rpx;
  margin-left: 10rpx;
  border-radius: 20rpx;
  box-shadow: 0 5rpx 3rpx 3rpx rgb(190, 190, 190);
}

.options{
  display: flex;
  margin-top:20rpx;
  width: 100%;
}
.option{
  position: relative;
  left: 50rpx;
  height: 70rpx;
  width: 140rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border:1rpx solid rgb(57, 163, 103);
}
.optionChoose{
  color:white;
  background: rgb(57, 163, 103);
}

.date{
  display: flex;
  position: relative;
  margin-top:100rpx;
  width: 90%;
  font-weight: bolder;
  justify-content: space-around;
  align-items: center;
  font-size: 35rpx;
}
.dateCotent{
  width: 50%;
  text-align: center;
}
.dateOption{
  width: 40rpx;
  height: 40rpx;
}

.forest{
  margin-top:25%;
  margin-bottom:25%;
}
/* 统计的数据的框架 */
.statistics_container{
  position: relative;
  width: 90%;
}
.statistics{
  background: rgb(57, 163, 103);
  width: 180rpx;
  height: 80rpx;
  border-radius: 40rpx;
  color:white;
  display: flex;
  align-items: center;
  position: relative;
  left: 70%;
  margin-bottom: 20rpx;
  font-size: 35rpx;
}
.statistics image{
  width: 60rpx;
  height: 60rpx;
  background: white;
  border-radius: 100%;
  margin-left: 10rpx;
  margin-right: 30rpx;
}

.target_container{
  width: 100%;
  height: 60%;
  overflow-y:scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  margin-top: 540rpx;
}
.target{
  display: flex;
  width: 95%;
  min-height: 150rpx;
  height: 150rpx;
  border-bottom: 3rpx solid gainsboro;
  font-size: 35rpx;
  align-items: center;
  transition:all 0.5s;
  position: relative;
}
.targetLabel{
  background: rgb(57, 163, 103);
  width: 80rpx;
  padding: 10rpx;
  color:white;
  margin-left: 20rpx;
  text-align: center;
}
.targetTitle{
  width: 60%;
  margin-left: 20rpx;
  margin-right:10rpx;
  font-size: 35rpx;
  color:rgb(88, 88, 88);
}
.noWatchTargetTitle{
  /* 没有围观按钮时的标题 */
  width: 80%;
}
.watchButton{
  width: 120rpx;
  height: 50rpx;
  color:white;
  background: rgb(57, 163, 103);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx rgb(24, 119, 65);
  position: absolute;
  right: 10rpx;
}
.watchButton:active{
  margin-top:5rpx;
  margin-left: 5rpx;
  box-shadow: none;
}
.watchMore{
  position: absolute;
  right: 30rpx;
  bottom:20rpx;
}
.targetContent{
  height: 300rpx;
  margin-left: 20rpx;
  margin-right:10rpx;
  margin-bottom: 82rpx;
  width: 95%;
  font-size: 30rpx;
  overflow-y:scroll;
  color:gray;
}
.targetShowDetail{
  flex-direction: column;
  margin-top:10rpx;
  align-items: flex-start;
  min-height: 550rpx;
}
.targetShowDetailLabel{
  width: 25%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.targetShowDetailTitle{
  width: 90%;
  font-weight: bold;
  font-size: 35rpx;
  margin-top:20rpx;
}


.noTarget{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color:gray;
}
.noTarget image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 15rpx;
  margin-top:120rpx;
}