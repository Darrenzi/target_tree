/* pages/mall/mall.wxss */
page{
  min-height: 100%;
  background: rgb(238, 238, 238);
  display: flex;
  justify-content: center;
}
.top{
  height: 300rpx;
  width: 100%;
  background: rgb(57, 163, 103);
  color:white;
  position: fixed;
  top:0;
  left: 0;
  z-index: 1;
}
.back{
  position: absolute;
  top:80rpx;
  left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  font-weight: bolder;
}
.top_title{
  font-size: 50rpx;
  font-weight: bold;
  width: 100%;
  text-align: center;
  padding-top:70rpx;
}
.top_button_container{
  margin-top:60rpx;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
}
.top_button{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  font-size: 35rpx;
  height: 65rpx;
  width: 220rpx;
}
.top_choose{
  /* 顶部按钮被选中的样式 */
  background: #bbbb00;
}

.main{
  position: relative;
  top:320rpx;
  width: 92%;
  color: rgb(95, 95, 95);
}
.tip{
  font-size: 30rpx;
  display: flex;
  align-items: center;
  color:rgb(109, 109, 109);
  margin-bottom: 30rpx;
}
.last{
  width: 100%;
  height: 330rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  background: white;
  box-shadow: 0 0 10rpx 10rpx rgb(196, 196, 196);
}
.last image{
  width: 95%;
  height: 90%;
}

.price{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:20rpx;
  margin-bottom: 60rpx;
}
.coin{
  width: 45rpx;
  height: 45rpx;
  margin-left:10rpx;
}

.tree_container{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.tree{
  width: 45%;
  height: 440rpx;
  margin-bottom: 80rpx;
}
.tree_top{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 90%;
  background: white;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx 10rpx rgb(196, 196, 196);
  font-size: 40rpx;
  font-weight: bold;
  color:rgb(87, 87, 87);
  position: relative;
}
.treeBackground{
  width: 90%;
  height: 60%;
  border-radius: 10rpx;
  margin-top:5%;
  margin-bottom: 12%;
}
.treeIcon{
  position: absolute;
  height: 170rpx;
  width: 170rpx;
  top:50rpx;
}

.detail_container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  top:0;
  z-index:2;
  background: rgba(58, 58, 58, 0.904);
}
.detail{
  background: white;
  width: 90%;
  min-height: 65%;
  max-height: 75%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y:scroll;
  animation: in 0.5s;
  position: relative;
}
.mainImageBackground{
  width: 90%;
  min-height: 450rpx;
  border-radius: 10rpx;
  margin-top:30rpx;
  margin-bottom: 20rpx;
}
.mainImage{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  top:115rpx;
}
.detail_images{
  margin-top:2%;
  margin-bottom:2%;
  display: flex;
  width: 90%;
}
.detail_images_item{
  font-size: 30rpx;
  color:green;
  font-weight: bold;
  text-align: center;
}
.detail_title{
  font-size: 45rpx;
  font-weight: bold;
  color:rgb(77, 77, 77);
  margin-top:2%;
}
.detail_content{
  font-size: 30rpx;
  width: 90%;
  height: 20%;
  min-height: 100rpx;
  margin-top:3%;
  margin-bottom: 15%;
  color:gray;
}
.detail_images image{
  text-align: center;
  width: 130rpx;
  height: 130rpx;
}
.button{
  position: relative;
  margin-top:50rpx;
  background: rgb(144, 219, 31);
  box-shadow: 5rpx 5rpx 5rpx 5rpx green;
  width: 320rpx;
  height: 100rpx;
  display: flex;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
  color:white;
  border-radius: 10rpx;  
  animation: in 0.5s;
}
.button:active{
  top:5rpx;
  box-shadow: none;
}