<!--pages/history/history.wxml-->

<loading content="{{loadContent}}"></loading>
<inform content="{{informContent}}"></inform>

<view class="allpage"  bindtouchstart="targetTouchStart" bindtouchend="targetTouchEnd">
<view class="top">
  时间历程
  <view class="back" bindtap="backHome">《</view>
  <view class="nowMonth">{{month}}月</view>
</view>

<view class="whitespace"></view>

<block wx:for="{{targetList}}" wx:key="targetKey"  >
<view class="allTargetContent">
  <view class="date">{{item.time}}</view>
  <view class="targetClass">
   <view class="outside_tree"></view>
   <view class="treeclass"></view>
   <view class="line"></view>
   <view class="fontclass">目标:</view>
   <view class="labelclass">{{item.label}}</view>
  </view>
</view>
</block>
</view>

<view class="contianer">
  <view id="{{index}}" class="target {{current_index==index?'targetChoose':''}}" wx:for="{{targetList}}" bindtap="choose" wx:key="targets">
    <view class="targetLabel">{{item.label}}</view>
    <view>{{item.progress}}%</view>
  </view>
  <view class="target" wx:if="{{targetList.length<3}}">空</view>
  <view class="target" wx:if="{{targetList.length<2}}">空</view>
  <view class="target" wx:if="{{targetList.length<1}}">空</view>
  <view class="target" wx:if="{{targetList.length<4}}">空</view>
</view>
<view class="whitespce_1"></view>




