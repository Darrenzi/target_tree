/* pages/clock/clock.wxss */

page {
  height: 100%;
  width: 100%;
}

.main {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgb(248, 248, 248);
}

.title {
  font-size: 40rpx;
  font-weight: bolder;
  color: rgb(54, 133, 54);
}

.middleImg {
  width: 100%;
  padding-bottom: 100rpx;
  padding-top: 100rpx;
}

.clock {
  font-size: 60px;
  font-weight: bold;
  color: rgb(54, 133, 54);
}

.button {
  background: rgb(54, 133, 54);
  width: 200rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 20rpx;
  margin-top: 120rpx;
}
