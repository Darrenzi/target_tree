/* pages/register/register.wxss */
.container{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index:10;
  overflow-y:scroll;
}

.top{
  width: 100%;
  display: flex;
  justify-content: center;
  background: white;
  z-index:2;
  position: fixed;
}
.top_title{
  width: 40%;
  padding:20rpx;
  text-align: center;
  background: rgb(57, 163, 103);
  font-size: 40rpx;
  border-radius: 20rpx;
  color:white;
  margin-top:80rpx;
  margin-bottom: 20rpx;
}

.title{
  position: relative;
  margin-top:200rpx;
  margin-bottom:30rpx;
}
.themeContainer{
  width: 100%;
  display: flex;
  justify-content: center;
}
.themeChoose{
  width: 90%;
  display: flex;
  flex-direction: column;
}
.themeOption{
  width: 600rpx;
  height: 500rpx;
}

.getUserInfo{
  position: relative;
  top:80rpx;
  background: rgb(57, 163, 103);
  box-shadow: 5rpx 5rpx 5rpx 5rpx green;
  width: 230rpx;
  height: 85rpx;
  display: flex;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
  color:white;
  border-radius: 10rpx;  
}
.getUserInfo:active{
  top:85rpx;
  box-shadow: none;
}