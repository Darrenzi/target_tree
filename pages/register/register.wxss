/* pages/register/register.wxss */
page{
  height: 100%;
  width: 100%;
  overflow: scroll;
}
.container{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index:10;
  overflow: scroll;
}

swiper{
  width: 100%;
  height: 100%;
  background: whiteb;
}
swiper-item{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}
.images{
  width: 100%;
  height: 100%;
}
.next{
  background: rgb(211, 202, 117);
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 8rpx 8rpx rgb(170, 163, 94);
  color:white;
  font-size: 35rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 10%;
}
.next:active{
  box-shadow: none;
  bottom:9%;
}

.top{
  width: 100%;
  display: flex;
  justify-content: center;
  background: white;
  z-index:2;
  position: fixed;
}
.top_title{
  width: 40%;
  padding:20rpx;
  text-align: center;
  background: rgb(57, 163, 103);
  font-size: 40rpx;
  border-radius: 20rpx;
  color:white;
  margin-top:80rpx;
  margin-bottom: 20rpx;
}

.title{
  position: relative;
  margin-top:200rpx;
  margin-bottom:30rpx;
  color:gray;
}
.themeContainer{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom:100rpx;
}
.themeChoose{
  width: 90%;
  display: flex;
  flex-direction: column;
  color:rgb(78, 78, 78);
}
.themeOption{
  width: 600rpx;
  height: 500rpx;
}

.getUserInfo{
  background: rgb(57, 163, 103);
  box-shadow: 5rpx 5rpx 5rpx 5rpx green;
  display: flex;
  font-size: 35rpx;
  justify-content: center;
  align-items: center;
  color:white;
  border-radius: 10rpx;
  position: absolute;
  top:1450rpx;
  margin-bottom:100rpx;
}
.getUserInfo:active{
  margin-top:5rpx;
  box-shadow: none;
}