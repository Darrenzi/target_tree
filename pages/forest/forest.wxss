/* pages/forest/forest.wxss */
page{
  min-height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 35rpx;
  color:rgb(57, 163, 103);
  background: rgb(255, 255, 255);
}
.back{
  position: absolute;
  left: 20rpx;
  width: 70rpx;
  height: 60rpx;
  font-weight: bolder;
  color: rgb(57, 163, 103);
}
.top{
  margin-top:80rpx;
  margin-bottom: 40rpx;
  height: 80rpx;
  width: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 40rpx;
  color: white;
  background: rgb(57, 163, 103);
}

.options{
  display: flex;
  margin-top:50rpx;
  width: 95%;
  justify-content: center;
}
.option{
  position: relative;
  height: 70rpx;
  width: 140rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border:1rpx solid rgb(57, 163, 103);
}
.optionChoose{
  color:white;
  background: rgb(57, 163, 103);
}

.date{
  display: flex;
  position: relative;
  margin-top:100rpx;
  width: 90%;
  font-weight: bolder;
  justify-content: space-around;
  align-items: center;
}
.dateCotent{
  width: 50%;
  text-align: center;
}
.dateOption{
  font-size: 50rpx;
}
.forest{
  margin-top:30%;
  margin-bottom: 20%;
}

/* 统计的数据的框架 */
.statistics_container{
  position: relative;
  width: 90%;
}
.statistics{
  background: rgb(57, 163, 103);
  width: 130rpx;
  height: 60rpx;
  border-radius: 30rpx;
  color:white;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  position: relative;
  left: 60%;
  margin-bottom: 20rpx;
}
.statistics image{
  width: 45rpx;
  height: 45rpx;
  background: white;
  border-radius: 100%;
}
.statistics_label{
  position: absolute;
  right: -120rpx;
  color:rgb(57, 163, 103);
}

.target_container{
  width: 100%;
  height: 60%;
  overflow-y:scroll;
  position: absolute;
  bottom:5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.target{
  display: flex;
  width: 95%;
  height: 150rpx;
  border-bottom: 3rpx solid gainsboro;
  font-size: 35rpx;
  align-items: center;
  transition:all 0.5s;
  position: relative;
}
.targetLabel{
  background: rgb(57, 163, 103);
  width: 80rpx;
  padding: 10rpx;
  color:white;
  margin-left: 20rpx;
  text-align: center;
}
.targetTitle{
  width: 80%;
  margin-left: 20rpx;
  margin-right:10rpx;
  font-size: 35rpx;
  color:rgb(88, 88, 88);
}
.targetContent{
  height: 300rpx;
  margin-left: 20rpx;
  margin-right:10rpx;
  margin-bottom: 40rpx;
  width: 95%;
  font-size: 30rpx;
  overflow-y:scroll;
  color:gray;
}
.targetShowDetail{
  flex-direction: column;
  margin-top:10rpx;
  align-items: flex-start;
  height: 480rpx;
}
.targetShowDetailLabel{
  width: 120rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.targetShowDetailTitle{
  width: 90%;
  font-weight: bold;
  font-size: 35rpx;
  margin-top:20rpx;
}


.noTarget{
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color:gray;
}
.noTarget image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 15rpx;
}