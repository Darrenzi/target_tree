.contianer{
  display: flex;
  align-items: center;
  height: 210rpx;
  width: 75%;
  position: relative;
  overflow-x: scroll;
  font-size: 35rpx;
  color:white;
}
.target{
  /* 目标框 */
  min-width: 160rpx;
  height: 180rpx;
  border: 2rpx solid rgb(212, 212, 79);
  border-radius: 10rpx;
  text-align: center;
  margin-left: 12rpx;
  margin-right: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.target2{
  min-width: 160rpx;
  height: 200rpx;
  border: 2rpx solid rgb(92, 92, 92);
  border-radius: 10rpx;
  text-align: center;
  margin-left: 12rpx;
  margin-right: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  color:gray;
}
.target2Container{
  width: 145rpx;
  height: 190rpx;
  border-radius: 15rpx;
  border:5rpx solid rgb(223, 169, 22);
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.targetChoose{
  /* 目标被选中时的样式 */
  background: rgb(212, 212, 79);
}
.targetLabel{
  width: 80%;
  font-size: 38rpx;
  background: rgb(223, 169, 22);
  border-radius: 10rpx;
  color:white;
}
.add{
  /* 添加框 */
  position: absolute;
  min-width: 160rpx;
  height:200rpx;
  right: 10rpx;
  text-align: center;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: bolder;
  border: 2rpx solid rgb(92, 92, 92);
  color:gray;
}
.add_icon{
  color:gray;
  font-size: 35rpx;
  font-weight: bolder;
}