/* components/custom-progress/custom-progress.wxss */
.progress{
  width: 100%;
  height: 50rpx;
  border: 4rpx solid gray;
  border-radius: 15rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  background:rgb(241, 241, 241);
  box-shadow: -5rpx 10rpx 10rpx 5rpx rgb(211, 211, 211);
}
.top{
  position: absolute;
  width: 95%;
  height: 15%;
  background: white;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.main{
  background: rgb(108, 221, 85);
  height: 100%;
  border-radius: 15rpx;
  position: absolute;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: width 1.5s;
}
.bottom{
  position: absolute;
  bottom: 0;
  background: rgb(56, 172, 75);
  width: 100%;
  height: 25%;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.content{
  position: absolute;
  font-weight: bold;
  color:black;
  z-index:2;
}