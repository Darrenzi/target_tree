.contianer{
  display: flex;
  overflow-x: scroll;
  width: 100%;
  margin-top: 160rpx;
}
.target{
  /* 目标框 */
  min-width: 22.5%;
  height:200rpx;
  border: 1rpx solid black;
  text-align: center;
  margin-left: 1%;
  margin-right: 1%;
}
.add{
  /* 添加框 */
  background: rgb(35, 223, 230);
  position: absolute;
  right: 0;
  min-width: 24%;
  height:200rpx;
  border: 1rpx solid black;
  text-align: center;
}
.add:active{
  /* 添加按钮被点击时 */
  background: rgb(19, 165, 223);
  color:white;
}
.choose{
  /* 目标被选中时的样式 */
  background: red;
  color:white;
}